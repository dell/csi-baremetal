<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<hal xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="hal_config.xsd">
    <version>2.0</version>
    <description>ECS generic template</description>
    <node>
        <hbas>
            <!-- Do not configure SATA disks -->
            <hba configure="true" device_class="0x106">
                <!-- Do not show SATADOM disks -->
                <disks configure="false" pid="SATADOM*"/>
                <!-- Do not show internal system disks on device_class="0x106" -->
                <disks>
                    <disk configure="false" system="true"/>
                </disks>
            </hba>

            <!-- Do not configure system disks -->
            <hba>
                <daes>
                    <dae>
                        <expanders>
                            <expander>
                                <disks>
                                    <disk configure="false" system="true" />
                                </disks>
                            </expander>
                        </expanders>
                    </dae>
                </daes>

                <disks>
                    <!-- Do not show raw system disks.
                         Show internal system disks with partitions to support hybrid configuration. -->
                    <disk configure="false" system="true"/>
                </disks>
            </hba>
        </hbas>

        <nics/>

        <net_interfaces>
            <net_interface is_private="true" is_public="false" name="private.4" count="1" mincount="1"/>
            <net_interface is_private="false" is_public="true" name="public" count="1" mincount="1"/>
            <net_interface is_repl="true" name="public*repl"/>
            <net_interface is_data="true" name="public*data"/>
            <net_interface is_data2="true" name="public*data2"/>
            <net_interface is_mgmt="true" name="public*mgmt"/>
            <net_interface is_mgmt="true" name="custom*mgmt"/>
        </net_interfaces>

        <settings>
            <excludeInternalDrivesIfDaePresent>true</excludeInternalDrivesIfDaePresent>
        </settings>
    </node>
</hal>
